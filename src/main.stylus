/*
 *rewrite el-select
 */
.el-select
  display inline-block
  line-height .3rem
  width 1.2rem
  color #666
  border 1px solid #ccc
  radius()
  shadow(0 0 2px rgba(0,0,0,.2))
  &:hover
    border-color BLUE
  &:active
    border-color transparent
    box-shadow 0 0 5px BLUE
  .el-input__inner
    height auto
    line-height .3rem
    padding-top 0
    padding-bottom 0
    border none
  .el-input .el-input__icon
    color #666
    
.el-select-dropdown
  font-size .12rem
  padding 0
  min-width auto
  text-align left
  font-size .12rem
  color #b0cfe3
  background-color rgba(22, 113, 188, .9)
  radius()
  .el-select-dropdown__item
    height .3rem
    line-height .3rem
    padding 0 PW
    color inherit
    &.selected
    &.hover
      color WHITE
      background-color BLUE
  
/*
 *rewrite el-slider
 */
  .el-slider
    display inline-block
    width 1.8rem
    vertical-align middle
    .el-slider__bar
      background-color #bbb
    .el-slider__runway
      background-color #ddd
    .el-slider__button
      background-color #fff
      border 2px solid BLUE
      shadow()
      &.hover
        border-color #108fdf
/*
 *rewrite el-table
 */
  table-bg(x = transparent)
    background-color x
    tr 
      background-color x
  table-header-bg(x = transparent)
    th 
      background-color x
      .cell
        background-color x
        
  table-header-color(x = #333)
    th
      .cell
        color x
  table-border(x = none)
    th
    th.is-leaf
    td
      border x
  table-header-font-weight(x = normal)
    th 
      font-weight x 
       
  table-row-hover(x = #d8e6ef)
    tr.hover-row td
      background-color x
  
  table-row-selected(x = #f1e0e1)
    tr.selected-row td
      background-color x
  table-row-height(x = .3rem)
    td
      height auto
      .cell
        line-height .3rem
   table-header-height(x = .3rem)
    th
      height auto
      .cell
        line-height .3rem

  // .el-table__fixed-header-wrapper thead div, .el-table__header-wrapper thead div
  //   color #333
    
  .el-table::before
  .el-table::after
  .el-table__fixed::before
  .el-table__fixed::after
    display none
    
  .el-table
    margin .05rem .02rem
    font-size .12rem
    color #666
    border none
    // 头部文字按钮
    th.actions .cell
      color BLUE 
      cursor pointer
    table-bg()
    table-header-bg()
    table-header-color()
    table-border()
    table-header-font-weight()
    table-row-hover()
    table-row-selected()
    table-row-height()
    table-header-height()

