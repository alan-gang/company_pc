/*
 *buttons class define
 */

.ds-button
  display inline-block
  padding 0 .22rem
  line-height .3rem
  text-align center
  color WHITE
  font-size .14rem
  radius()
  box-shadow .02rem .02rem .02rem rgba(0, 0, 0, .2)
  font-shadow()
  user-select none
  cursor pointer
  box-sizing border-box
  &.bold
    font-weight bold
  &.large
    padding 0 .3rem
  &.full
    padding-left 0
    padding-right 0
    width 100%
  &.small
    padding 0 .15rem
  &.x-small
    padding 0 .1rem
  &.xx-small
    line-height 1
    padding .035rem
  
  &.primary
    background-color BLUE
    &:not(.disabled):hover
      background-color BLUE-HOVER
    &:not(.disabled):active
      background-color BLUE-ACTIVE 
  &.danger
    background-color DANGER
    &:not(.disabled):hover
      background-color DANGER-HOVER
    &:not(.disabled):active
      background-color DANGER-ACTIVE 
  &.positive
    bg-gradient(left, BLUE, #12cdbe) 
    &:not(.disabled):hover
      bg-gradient(left, #33b0ff, #24ddce) 
    &:not(.disabled):active
      background #0d8ddd
  &.secondary
    color #606ba3
    bg-gradient(top, #f1f1f1, #e6e6e6)
    &:not(.disabled):hover
      bg-gradient(top, #fff, #f2f2f2)
    &:not(.disabled):active
      background #dedede
  &.outline
    font-size .12rem
    color #666
    background-color #fff
    border .01rem solid #ccc
    box-shadow .02rem .02rem .02rem rgba(0, 0, 0, .1)
    text-shadow none
    &:not(.disabled):hover
      border-color BLUE
    &:not(.disabled):active
      color #333
      background-color #f3f3f3
      border-color #aaa
      
  &.success
    background-color #65c014
    &:not(.disabled):hover
      background-color #72ca23
    &:not(.disabled):active
      background-color #65c014
  &.text-button
    border 0
    background-color transparent
    box-shadow none
    font-shadow()
  &.light
    color LIGHT
    &:not(.disabled):hover
      color LIGHT-HOVER
  &.input
    padding 0 .04rem
    width .4rem
    text-align center
    pointer text
    input
      border none
      width .3rem
      padding 0
      line-height .3rem
      height auto
      text-align center
    &:not(.disabled):active
      border none
      background-color #fff
      box-shadow 0 0 .05rem BLUE
  &.disabled
    cursor not-allowed
    background-image none
    box-shadow none
    text-shadow none
    &.primary
      color BLUE
      background-color transparent
      border .01rem solid BLUE


      
.ds-radio-label
  display inline-block
  padding 0 PW
  color LIGHT
  cursor pointer
  &:hover
    .ds-radio
      border-color rgba(255, 255, 255, .4)
   &.active
     color WHITE
     .ds-radio
        border-color BLUE
        &:after
          width .07rem
          height .07rem 
          background-color BLUE 
          
  
.ds-radio
  position relative
  top -.01rem
  display inline-block
  box-sizing border-box
  width .2rem
  height .2rem
  border .01rem solid rgba(255, 255, 255, .2)
  radius(50%)
  box-shadow()
  margin .05rem
  vertical-align middle
  &:hover
    border-color rgba(255, 255, 255, .4)
  &.active
    border-color BLUE
    &:after
      width .07rem
      height .07rem 
      background-color BLUE 
  &:after
    content ''
    position absolute
    left 50%
    top 50%
    width 100%
    height 100%
    radius(50%)
    transform translate(-50%, -50%)
    transition all .15s linear
    
.ds-checkbox-label
  display inline-block
  margin-right .1rem
  color #666
  cursor pointer
  &:hover
    .ds-checkbox
      border-color BLUE
      &.transparent
        border-color rgba(255, 255, 255, .4)
   &.active
    .ds-checkbox:after
        transform rotate(45deg) scaleY(1)
          
  
.ds-checkbox
  position relative
  top -.01rem
  display inline-block
  box-sizing border-box
  width .2rem
  height .2rem
  radius()
  box-shadow()
  margin-right .05rem
  vertical-align middle
  background-color WHITE
  border .01rem solid #ccc
  &.transparent
    background-color transparent
    border .01rem solid rgba(255, 255, 255, .2)
  &:hover
    border-color BLUE
  &.transparent:hover
    border-color rgba(255, 255, 255, .4)
  &.active
    border-color #ccc
    &:after
      transform rotate(45deg) scaleY(1)
      
  &.transparent.active
    border-color rgba(255, 255, 255, .4)
     

  &:after
    content ''
    position absolute
    width .05rem
    height .12rem
    box-sizing content-box
    border 3px solid BLUE
    border-bottom-right-radius .04rem
    border-left 0
    border-top 0
    left .05rem
    top .01rem
    transform rotate(45deg) scaleY(0)
    transition transform .15s cubic-bezier(.71,-.46,.88,.6) .05s
    transform-origin center
    
    
  
    
    
  
       
