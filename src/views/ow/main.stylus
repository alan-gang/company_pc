  // comon swiper
    
  .swiper-container 
    overflow hidden
    
    // .swiper-slide
    //   overflow hidden
    //   // padding-top HH
    //   text-align center
    //   display flex
    //   -ms-flex-pack center
    //   justify-content center
    //   -ms-flex-align center
    //   align-items center
    //   &.root
    //     display block
    .swiper-button-prev
    .swiper-button-next
      width .6rem
      height .6rem
      radius(50%)
      background url(./assets/pre.png) #a98afb center no-repeat
      &:hover
        background-color #ff4857
        
        
    .swiper-button-next
      background-color  #5b9df4 
      transform rotateZ(180deg)
    .swiper-pagination
      .swiper-pagination-bullet
        width .15rem
        height .15rem
        radius(50%)
        background #c3c1fb
        opacity .5
        &:hover
          background #fff
        &.swiper-pagination-bullet-active
          background #fff
          opacity 1
      &.blue
        .swiper-pagination-bullet
          background #1a9ff3
          opacity .2
          &:hover
            opacity .6
          &.swiper-pagination-bullet-active
            opacity 1
            background #1a9ff3
            
            
  
  // common button
  .button
    display inline-block
    padding 0 .2rem
    line-height .3rem
    background-color rgba(222,222,222, .2)
    cursor pointer
    &:hover
      background-color rgba(222,222,222, .3)
    &.on
      background-color #37d679
    
    &.green
      background-color #10d560
      radius(.15rem)
      opacity .95
      &:hover
        opacity 1
    &.oval
      border-top-left-radius 10% 50%
      border-top-right-radius 10% 50%
      border-bottom-left-radius 10% 50%
      border-bottom-right-radius 10% 50%
   
      
        
  

