.ds-ow-button-group
  display inline-block
  radius(.2rem)
  overflow hidden
  margin .2rem 0
  border 1px solid #888
  .ds-ow-button
    border-radius 0
  
.ds-ow-button
  display inline-block
  padding 0 .22rem
  // height .3rem
  line-height .3rem
  text-align center
  color WHITE
  font-size .14rem
  border 0
  radius()
  user-select none
  cursor pointer
  box-sizing border-box
  vertical-align middle

  &.bold
    font-weight bold
  &.large
    padding 0 .3rem
  &.x-large
    padding 0 .5rem
  &.full
    padding-left 0
    padding-right 0
    width 100%
  &.small
    padding 0 .15rem
  &.x-small
    padding 0 .1rem
  &.xx-small
    line-height 1
    padding .035rem
  &._3rem
    width 3rem
  &.tall
    height .4rem
    line-height .4rem
    font-size .24rem
  &.oval
    border-top-left-radius 10% 50%
    border-top-right-radius 10% 50%
    border-bottom-left-radius 10% 50%
    border-bottom-right-radius 10% 50%

  &.light
    color #fff
    background rgba(255, 255, 255, .5)
  &.grey-border
    border 1px solid #ccc
    background-color #fff
    color #999
  &.green
    background-color #10d560
    opacity .95
    &:hover
      opacity 1
  &.under-border
    width 1.5rem
    height .6rem
    line-height .6rem
    margin 0 .3rem
    border-bottom 2px solid rgba(0,0,0,0)
    opacity .5
    radius(0)
    .on
      border-color #fff
      opacity 1
    &:hover
      border-color #fff
      opacity .8
      background-color rgba(0,0,0,0)
    

.card
  cursor pointer
  margin .3rem
  display inline-block
  padding PW * 4 PW * 3
  radius()
  
  &.hover
    shadow(0 0 .8rem rgba(0,0,0,.1))
  &:hover
    shadow(0 0 .8rem rgba(0,0,0,.1))
    .ds-ow-button
      bg-gradient(90deg, #1a9ff3, #8f84ff)
      color #fff
      border-color rgba(0,0,0,0)
  .ds-ow-button
    margin-top .5rem