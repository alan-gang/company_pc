// icons
.ds-gm-icon-logo
  background url(assets/logo.png) center .3rem no-repeat
.ds-icon-me-menu
  display inline-block
  width .26rem
  height .26rem
  vertical-align middle
  margin-right PW
  shadow(0 0 2px rgba(0,0,0,.2) )
  background url(assets/icon_01.png) center no-repeat
.ds-icon-group-menu
  display inline-block
  width .26rem
  height .26rem
  vertical-align middle
  margin-right PW
  shadow(0 0 2px rgba(0,0,0,.2) )
  background url(assets/icon_02.png) center no-repeat
.ds-icon-record-menu
  display inline-block
  width .26rem
  height .26rem
  vertical-align middle
  margin-right PW
  shadow(0 0 2px rgba(0,0,0,.2) )
  background url(assets/icon_03.png) center no-repeat


// dialog-page
 .app.night .dialog-page
  bg-gradient(180deg, #181d31, #2d2d45, #444059)
.app.night .page
  .dialog-page
    transform none !important
    transition none !important
    &>.move-bar
    &>.resize-x
    &>.resize-y
      display none
    &>.tool-bar .el-button-group .el-button:not(:last-child)
        display none
    &.static
      shadow(none)
      radius(0)
      .el-loading-mask
        top 0
      &>.tool-bar
        display none
      .scroll-content
        padding-top PWX
        top 0
        
      &.me-page
        .me-sideview
          top 0
          radius(0)
      
      &.trend-chart-page
        .scroll-content
          top 1.44rem
        .game-info
          background-color rgba(0,0,0,0)
      
      
    
