@import './var.stylus'
@import '../../src/main.stylus'
@import '../../src/night.stylus'


// el-menu
.el-menu
  radius(0)
  margin .1rem 0
  background-color rgba(0,0,0,0)
  // color #9da4cb
  .el-submenu__title
    height .4rem
    line-height .4rem
    color #9da4cb
    &:hover
      background-color rgba(255, 255, 255, .08)
  .el-menu-item
    color #9da4cb
    height .4rem
    line-height .4rem
    &:before
      content ''
      display inline-block
      width 5px
      height 5px
      radius(50%)
      background-color #9da4cb
      vertical-align middle
      margin 0 .08rem
    &:hover
    &.is-active
      color BLUE
      background-color rgba(0, 0, 0, 0)
      &:before
        background-color BLUE
      
  .el-menu-item-group
      background-color rgba(0, 0, 0, .3)
  
  .el-submenu
    &.is-opened
      .el-submenu__title
        color #fff
        background-color rgba(255, 255, 255, .08)
        font-weight bold
        
.el-submenu .el-menu
  margin .05rem 0 0 0
  background-color rgba(0,0,0,0)

.el-menu-item-group__title
  display none
